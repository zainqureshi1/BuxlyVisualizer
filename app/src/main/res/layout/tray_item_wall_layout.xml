<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content" android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_tiny" android:layout_marginBottom="@dimen/margin_tiny"
    android:orientation="vertical" android:background="@color/transparent" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_tiny"
        android:gravity="center_horizontal"
        android:background="@drawable/wall_box"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textViewWallName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_minute"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_marginRight="@dimen/margin_small"
            android:lines="1"
            android:ems="5"
            android:gravity="center"
            android:text="@string/app_name"
            android:textSize="@dimen/text_size_medium"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/textViewColorName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_tiny"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_marginRight="@dimen/margin_small"
            android:lines="1"
            android:ems="5"
            android:gravity="center"
            android:textSize="@dimen/text_size_small_upper"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/textViewColorCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_marginRight="@dimen/margin_small"
            android:layout_marginBottom="@dimen/margin_minute"
            android:lines="1"
            android:ems="5"
            android:gravity="center"
            android:textSize="@dimen/text_size_medium_lower"
            android:textColor="@color/white" />

    </LinearLayout>

</LinearLayout>